<header>
<div id="header-top">
	<div id="logo"  class="center-block">
		<%= image_tag('logo.png') %>
	</div>


</div>
<div class="navbar navbar-default" role="navigation">

<% if user_signed_in? %>
	<ul class="nav navbar-nav">
		<li><%= link_to 'All Events', events_path  %></li>
		<li><%= link_to 'My profile', current_user %></li>
		<li><%= link_to 'Create an event', new_event_path  %></li>
	</ul>

	<%= link_to 'Sign out', destroy_user_session_path, method: "delete", class: "btn btn-default navbar-btn navbar-right" %>

	<p class="navbar-text pull-right">Welcome, <%= current_user.username %>!</p>

<% else %>
	<ul class="nav navbar-nav">
		<li><%= link_to 'All Events', events_path  %></li>
	</ul>

	<%= link_to 'Sign in', new_user_session_path, class: "btn btn-default navbar-btn navbar-right" %>

	<%= link_to "Sign up", new_user_registration_path, class: "btn btn-default navbar-btn navbar-right btn-sign-up"   %>

<% end %>


</div> <!--navbar-->
</header>