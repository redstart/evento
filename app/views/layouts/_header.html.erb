<header>
<div id="header-top">
<%= link_to events_path do %>
	<div id="logo"  class="center-block">
		<%= image_tag('logo.png') %>
	</div>
<% end %>

</div>
<div class="navbar navbar-default" role="navigation">

<% if signed_in? %>
	<ul class="nav navbar-nav">
		<li><%= link_to 'All Events', events_path  %></li>
		<li><%= link_to 'My profile', current_user %></li>
		<li><%= link_to 'Create an event', new_event_path  %></li>
	</ul>

	<%= link_to 'Sign out', signout_path, method: "delete", class: "btn btn-default navbar-btn navbar-right" %>

	<p class="navbar-text pull-right">Welcome, <%= current_user.name %>!</p>

<% else %>
	<ul class="nav navbar-nav">
		<li><%= link_to 'All Events', events_path  %></li>
	</ul>

	<%= link_to 'Sign in', signin_path, class: "btn btn-default navbar-btn navbar-right" %>

<% end %>


</div> <!--navbar-->
</header>